<%- include('bootheader') -%>
<%- include('menubar') -%>

<% if (loggedIn && isAdmin) { %>

<div class="jumbotron gradient">
  <h1>
    Admin Page
  </h1>
  <br>
</div>
<hr>
<body>
  <form method="post" action="/makeAdmin">
    <small><strong> ID of user to be made admin: </strong></small>
    <input type="text" name="id">
    <input type="submit" value="Make User Admin">
  </form>
  <br>
  <hr>
  <br>
  <form method="post" action="/removeAdmin">
    <small><strong> ID of user to be removed as admin: </strong></small>
    <input type="text" name="id">
    <input type="submit" value="Remove User's Admin">
  </form>
  <br>
  <hr>
  <br>
  <form method="post" action="/removeUser">
    <small><strong> DANGEROUS: ID of user to be removed from database: </strong></small>
    <input type="text" name="id">
    <input type="submit" value="REMOVE USER FROM SITE">
  </form>
</body>

<hr>

<% } else { %>

<a href="/">You must be an admin to use this page.</a>

<% } %>

<%- include('bootfooter') -%>